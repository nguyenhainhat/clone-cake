mixin sectionCaption(caption, title)
  .section-caption
    .section-title
      h3= caption
      h2= title

mixin listNavbar(name,link="#!")
  li.header-items
    a.header-link(href=link)= name
    if name == 'Blog'
      ul.header-blog
        li
          a.header-blog_list(href="blog.html") Blog
        li
          a.header-blog_list(href="blogDetails.html") Blog Detail
        li
          a.header-blog_list(href="blogEml.html") Element

mixin sliderContent(data)
  .slider-content
    .slider-caption
      h2.slider-title= data.title
    h1= data.caption
    if(data.desc)
      p= data.desc
      .btn.btn-slider
        a(href="#!") Explore Menu
  .slider-sub 
    img(src= data.imgSub, alt="")

mixin sliderComponents(data)
  section.slider#slider-components
    .slider-container 
      .container 
        .row
          .slider-content
            .slider-caption
              h2.slider-title= data.title
            h1= data.caption
          .slider-sub 
            img(src= data.imgSub, alt="")

mixin popularItems(data)
