mixin blogForm(name, title)
  form.blog-form_control
    input(type=text placeholder= name).blog-form_input
    if name == "Search Keyword"
      button.btn.blog-form_btn
        i.fas.fa-search
  button.btn.btn-form 
    a(href="#!")= title

